<Page
    x:Class="RawParser.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RawParser"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    SizeChanged="PageSizeChanged">

    <Page.BottomAppBar>
        <CommandBar >
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton x:Name="rotateLeftButton" 
                          Icon="Undo"
                          Label="Turn left" 
                          VerticalAlignment="Top" FontSize="12" Width="48"/>
            <AppBarButton x:Name="rotateRightButton" 
                          Icon="Redo"
                          Label="Rotate right" 
                          VerticalAlignment="Top" FontSize="12" Width="48"/>
            <AppBarSeparator/>
            <AppBarButton x:Name="ImageChooseButton" 
                          Icon="BrowsePhotos"
                          Label="Open an Image" 
                          Click="appBarImageChooseClick"
                          VerticalAlignment="Top" FontSize="12" Width="40"/>
            <AppBarButton x:Name="saveButton" 
                          Icon="SaveLocal"
                          Label="Save" 
                          Click="saveButton_Click"
                          VerticalAlignment="Top"/>
            <AppBarButton x:Name="shareButton" 
                          Icon="Link"
                          Label="Share" 
                          VerticalAlignment="Top"/>

            <AppBarButton x:Name="settingsButton"  Icon="Setting" Label="Setting" Click="appbarSettingClick"/>
            <AppBarButton x:Name="showSplitPanelButton"
                          Label="Show sidepanel" 
                          VerticalAlignment="Top" Visibility="Collapsed"
                          Click="appbarShowSplitClick" Icon="Back" FontSize="12" Width="40"/>
            <CommandBar.SecondaryCommands>
                <AppBarButton x:Name="settingsButton2" Icon="Setting" Label="Setting" Click="appbarSettingClick"/>

                <AppBarButton x:Name="saveButton2" Click="saveButton_Click"  Icon="SaveLocal" Label="Save" VerticalAlignment="Top"/>
                <AppBarButton x:Name="shareButton2" Icon="Link" Label="Share" VerticalAlignment="Top"/>
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>

    <Grid >
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="wideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1080" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!-- To make the panel hidable when not enough screen size -->
                        <Setter Target="splitView.DisplayMode" Value="Inline" />

                        <Setter Target="showSplitPanelButton.Visibility" Value="Collapsed" />

                        <Setter Target="saveButton.Visibility" Value="Visible" />
                        <Setter Target="shareButton.Visibility" Value="Visible" />
                        <Setter Target="settingsButton.Visibility" Value="Visible" />

                        <Setter Target="saveButton2.Visibility" Value="Collapsed" />
                        <Setter Target="shareButton2.Visibility" Value="Collapsed" />
                        <Setter Target="settingsButton2.Visibility" Value="Collapsed" />
                        <Setter Target="splitView.IsPaneOpen" Value="True" />
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:Name="mediumState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="480" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!-- To make the panel hidable when not enough screen size -->
                        <Setter Target="splitView.DisplayMode" Value="Overlay" />

                        <Setter Target="showSplitPanelButton.Visibility" Value="Visible" />

                        <Setter Target="saveButton.Visibility" Value="Visible" />
                        <Setter Target="shareButton.Visibility" Value="Visible" />
                        <Setter Target="settingsButton.Visibility" Value="Visible" />

                        <Setter Target="saveButton2.Visibility" Value="Collapsed" />
                        <Setter Target="shareButton2.Visibility" Value="Collapsed" />
                        <Setter Target="settingsButton2.Visibility" Value="Collapsed" />

                        <Setter Target="splitView.IsPaneOpen" Value="false" />
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:Name="narrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!-- To make the panel hidable when not enough screen size -->
                        <Setter Target="splitView.DisplayMode" Value="Overlay" />
                        <Setter Target="showSplitPanelButton.Visibility" Value="Visible" />

                        <Setter Target="saveButton.Visibility" Value="Collapsed" />
                        <Setter Target="shareButton.Visibility" Value="Collapsed" />
                        <Setter Target="settingsButton.Visibility" Value="Collapsed" />

                        <Setter Target="saveButton2.Visibility" Value="Visible" />
                        <Setter Target="shareButton2.Visibility" Value="Visible" />
                        <Setter Target="settingsButton2.Visibility" Value="Visible" />

                        <Setter Target="splitView.IsPaneOpen" Value="False" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <SplitView x:Name="splitView" PanePlacement="Right" DisplayMode="Inline" IsPaneOpen="True" PaneBackground="#FFF7F7F7">
            <SplitView.Content>
                <ScrollViewer x:Name="imageDisplayScroll" ZoomMode="Enabled" 
                            MinZoomFactor="1" 
                            MaxZoomFactor="10"
                            
                            HorizontalScrollBarVisibility="Auto"
                            VerticalScrollBarVisibility="Auto" Background="{x:Null}">
                    <Image x:Name="imageBox"/>
                </ScrollViewer>
            </SplitView.Content>
            <SplitView.Pane >
                <Pivot>
                    <PivotItem Header="Exposure">
                        <StackPanel >
                            <!--The histogram-->
                            <TextBlock Foreground="Black" IsDoubleTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False" IsTapEnabled="False" ManipulationMode="None" HorizontalAlignment="Left" FontSize="18">
                                Histogram
                            </TextBlock>
                            <Border BorderBrush="#FF818181" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Canvas x:Name="histogramCanvas" Width="256" Height="200" Background="White">
                                    <ProgressBar x:Name="histoLoadingBar" VerticalAlignment="Center" IsIndeterminate="True" Width="{Binding ActualWidth, ElementName=histogramCanvas, Mode=OneWay}" Visibility="Collapsed"/>
                                </Canvas>
                            </Border>
                            <TextBlock Foreground="Black" FontSize="22" >
                                Exposure settings
                            </TextBlock>
                            <TextBlock FontSize="12">
                                Exposure
                            </TextBlock>
                            <Slider x:Name="exposureSlider" PointerCaptureLost="exposureSlider_DragStop"  Maximum="5" Minimum="-5" LargeChange="1" SmallChange="0.3" IsEnabled="False" StepFrequency="0.3" Margin="4,0,0,0"/>
                            <TextBlock FontSize="12">
                                Temperature
                            </TextBlock>
                            <Slider x:Name="colorTempSlider"  PointerCaptureLost="WBSlider_DragStop"  Width="300" Maximum="10000" Minimum="1000" LargeChange="100" SmallChange="10" Value="1000" IsEnabled="False"/>

                            <Button IsEnabled="False" Click="cameraWBCheck_Click" FontSize="12" Grid.Column="1" x:Name="cameraWBCheck" HorizontalAlignment="Center">
                                Use camera white balance
                            </Button>
                            <Rectangle Width="120" Height="1" Fill="#FF343434" Margin="0,6,0,0"/>

                        </StackPanel>
                    </PivotItem>
                    <PivotItem Header="Tools">
                        <StackPanel Background="#FFF0F0F0">
                        </StackPanel>
                    </PivotItem>
                    <PivotItem Header="Presets">
                        <GridView Background="White" ></GridView>
                    </PivotItem>
                    <PivotItem Header="Exifs">
                        <StackPanel>
                            <TextBlock>Exifs data:</TextBlock>
                            <ListView Background="#FFF0F0F0" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="exifDisplay" IsEnabled="False" IsHitTestVisible="False" IsTabStop="False">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid BorderBrush="#FF6A6A6A" BorderThickness="0,1,0,0" Background="{x:Null}" >
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <Grid.Resources>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Margin" Value="5,0" />
                                                    </Style>
                                                </Grid.Resources>
                                                <TextBlock Grid.Column="0" Text="{Binding displayName}" IsDoubleTapEnabled="False" IsTapEnabled="False" IsTextSelectionEnabled="True" />
                                                <TextBlock Grid.Column="1" Text="{Binding dataAsString}" IsTextSelectionEnabled="True" IsTapEnabled="False" IsDoubleTapEnabled="False" TextAlignment="Right" />
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ListView>
                        </StackPanel>
                    </PivotItem>
                </Pivot>
            </SplitView.Pane>
        </SplitView>

        <ProgressBar x:Name="progressDisplay"  
                      VerticalAlignment="Top" 
                      Background="{x:Null}" 
                      Foreground="#FF00589C" 
                      IsIndeterminate="True" Margin="0"
                     RenderTransformOrigin="0.5,0.5"
                     Visibility="Collapsed">
            <ProgressBar.RenderTransform>
                <CompositeTransform ScaleY="-1"/>
            </ProgressBar.RenderTransform>
        </ProgressBar>
    </Grid>
</Page>
